
{
    "manifest_version": 3,
    "name": "YouTube Shorts Auto-Next",
    "version": "1.0",
    "description": "Automatically goes to the next YouTube Short when the current one ends.",
    "action": {
        "default_icon": "YTSAP.png",
        "default_title": "YT Shorts Autoplay"
    },
    "content_scripts": [
      {
        "matches": ["https://www.youtube.com/shorts/*"],
        "js": ["content.js"]
      }
    ],
    "permissions": [
        "activeTab"
    ]
  }